<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidnetexample.MainActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:id="@+id/btn_test_palindrome_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="TestPalindrome" />

    <Button
        android:id="@+id/btn_calculator_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_test_palindrome_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Calculator" />

    <Button
        android:id="@+id/btn_todo_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calculator_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="ToDo" />

    <Button
        android:id="@+id/btn_search_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_todo_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Search" />
    
</RelativeLayout>